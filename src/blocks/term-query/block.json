{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "cr0ybot/term-query",
	"title": "Term Query Loop",
	"category": "theme",
	"description": "An advanced block that allows displaying taxonomy terms based on different query parameters and visual configurations.",
	"keywords": [
		"taxonomy",
		"term",
		"query",
		"loop"
	],
	"textdomain": "term-query",
	"attributes": {
		"queryId": {
			"type": "number"
		},
		"query": {
			"type": "object",
			"default": {
				"taxonomy": "",
				"perPage": 100,
				"pages": 0,
				"offset": 0,
				"order": "asc",
				"orderBy": "name",
				"hideEmpty": true,
				"include": [],
				"exclude": [],
				"inherit": false,
				"parent": 0
			}
		},
		"stickyTerms": {
			"type": "array",
			"default": []
		},
		"tagName": {
			"type": "string",
			"default": "div"
		},
		"namespace": {
			"type": "string"
		},
		"previewTaxonomy": {
			"type": "string"
		}
	},
	"providesContext": {
		"term-query/queryId": "queryId",
		"term-query/stickyTerms": "stickyTerms",
		"term-query/displayLayout": "displayLayout",
		"term-query/previewTaxonomy": "previewTaxonomy"
	},
	"usesContext": [
		"term-query/queryId",
		"term-query/query",
		"term-query/termId"
	],
	"supports": {
		"align": [
			"wide",
			"full"
		],
		"html": false,
		"layout": true
	},
	"editorScript": "file:./index.js",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
